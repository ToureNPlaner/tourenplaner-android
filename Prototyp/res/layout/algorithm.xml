</LinearLayout>
<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/btnTSP" android:text="@string/tsp"></Button>
<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/btnCSP" android:text="@string/csp"></Button>
<RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="0.77"></RelativeLayout>
<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/btnBilling" android:text="@string/billingr"></Button>
</LinearLayout>
